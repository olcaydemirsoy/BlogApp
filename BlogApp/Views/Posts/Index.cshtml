@model PostViewModel
<div class="container mt-4">
    <div class="row">
        <!-- SOL: Ana İçerik -->
        <div class="col-md-8 mb-4">
            @await Html.PartialAsync("_Posts")
        </div>

        <!-- SAĞ: Etiketler + Son Postlar -->
        <div class="col-md-4">
            <!-- Etiketler Kartı -->
            <div class="card mb-4 shadow-sm">
                @* @await Html.PartialAsync("_Tags") *@
                @await Component.InvokeAsync("TagsMenu")
            </div>

            <!-- Son Postlar Kartı -->
            <div class="card shadow-sm">
                @await Component.InvokeAsync("LastPosts")
            </div>
        </div>
    </div>
</div>